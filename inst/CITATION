citHeader("To cite aurelhy in publications use:")

citEntry(entry="Manual",
         title = "AURELHY: a R package implementing the AURELHY method",
         author = "Philippe Grosjean",
         organization = "UMONS",
         address      = "Mons, Belgium",
         year         = version$year,
         url          = "http://r-forge.r-project.org/projects/aurelhy/",

         textVersion =
         paste("Grosjean, Ph. (", version$year, "). ",
               "AURELHY: a R package implementing the AURELHY method. ",
               "UMONS, Mons, Belgium. ",
               "URL http://r-forge.r-project.org/projects/aurelhy/.",
               sep="")
         )

citFooter("We have invested a lot of time and effort in creating aurelhy,",
          "please cite it when using it together with R.",
	  "See also", sQuote("citation()"),
	  "for citing R.")
